<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_datefilter"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:padding="24dp">

    <TextView
        android:id="@+id/prompt_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_datefilter"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RadioGroup
        android:id="@+id/date_filter_radgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/date_filter_option_payperiod"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="6dp"
            android:text="@string/pay_period"
            android:textAppearance="?android:textAppearanceMedium"/>

        <RadioButton
            android:id="@+id/date_filter_option_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="6dp"
            android:text="@string/month"
            android:textAppearance="?android:textAppearanceMedium"/>

        <RadioButton
            android:id="@+id/date_filter_option_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="6dp"
            android:text="@string/custom_period"
            android:textAppearance="?android:textAppearanceMedium"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/custom_period_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="38dp">
            <LinearLayout
                android:id="@+id/layout_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="30dp"
                android:onClick="showDatePickerDialog">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/start_date"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/primaryText"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="01/02/2017"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/secondaryText"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_enddate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:onClick="showDatePickerDialog">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="@string/end_date"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/primaryText"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="01/02/2017"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/secondaryText"/>
            </LinearLayout>
        </LinearLayout>

        <RadioButton
            android:id="@+id/date_filter_option_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="6dp"
            android:text="@string/all_transactions"
            android:textAppearance="?android:textAppearanceMedium"/>
    </RadioGroup>
</LinearLayout>